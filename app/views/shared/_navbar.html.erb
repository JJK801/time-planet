<nav class="Navbar <%= yield(:navbar_classes) %>"
     data-controller="navbar"
     data-action="resize@window->navbar#closeMenuOnLargeBreakpoint">
  <div class="container Navbar-container" data-action="scroll@window->navbar#toggleDarkModeOnScroll">
    <button class="Navbar-hamburger Nabbar-link hamburger hamburger--squeeze"
            type="button"
            aria-label="Menu"
            aria-controls="navigation"
            data-target="navbar.hamburger"
            data-action="navbar#toggleMenu">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
    </button>
    <%= link_to root_path, class: 'Navbar-logoContainer' do %>
      <%= embedded_svg 'logo-time-planet.svg', class: "Navbar-logo" %>
      Time for the Planet
    <% end %>
    <div class="Navbar-links">
      <%= link_to t('common.convention'), vision_path, class: 'Button Navbar-link Navbar-linkDesktop' %>

      <% if request.path == become_associate_path %>
        <%= render 'shared/associate_cta', class_name: 'AssociateCta' %>
      <% else %>
        <%= link_to become_associate_path, class: 'Navbar-cta Button Button--underlined' do %>
          <%= t('common.act') %> <i class="material-icons">arrow_forward</i>
        <% end %>
      <% end %>
    </div>
  </div>
    <ul class="Navbar-mobileLinks">
      <li>
        <%= link_to t('common.convention'), vision_path, class: 'Button Navbar-link' %>
      </li>
      <li>
        <%= link_to become_associate_path, class: 'Navbar-cta Button Button--underlined' do %>
          <%= t('common.act') %> <i class="material-icons">arrow_forward</i>
        <% end %>
      </li>
    </ul>
</nav>
